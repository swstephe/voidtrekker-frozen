doctype html
html(lang=site.language)
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    meta(http-equiv='X-UA-Compatible' content='ie-edge')
    title NavBar Testing
    style(type='text/css').
      * { box-sizing: border-box; }
      .container {
          max-width: 1200px;
          margin: 0 auto;
      }

      nav {
          display: flex;
          justify-content: space-between;
          align-items: baseline;
      }

      nav ul {
          display: flex;
          justify-content: space-evenly;
          width: 50%;
      }

      nav ul > li {
          display: inline-block;
          *display: inline;
      }

  body
    .container
      nav
        .logo
          a(href='/')
            img(src='/favicon/favicon-32.png' alt=site.title)
            span= site.title
        ul
          li: a.current(href='/') Home
          li: a(href='/blog') Blog
          li: a(href='/category') Category
          li: a(href='/tags') Tags
